{
  "name": "qortal-ui",
  "version": "1.0.1",
  "description": "Qortal Project - decentralize the world - Data storage, communications, web hosting, decentralized trading, complete infrastructure for the future blockchain-based Internet",
  "main": "electron.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/Qortal/qortal-ui.git"
  },
  "author": "QORTAL <admin@qortal.org>",
  "license": "MIT",
  "scripts": {
    "start": "node main.js",
    "build": "node build.js",
    "server": "node server.js",
    "headless": "node server.js",
    "watch": "node watch.js",
    "watch-inline": "node watch-inline.js",
    "start-electron": "electron .",
    "build-electron": "electron-builder build  --publish never",
    "deploy-electron": "electron-builder build --win --publish never",
    "release": "electron-builder build --publish always"
  },
  "devDependencies": {
    "electron": "^8.1.1",
    "electron-builder": "^22.4.1"
  },
  "dependencies": {
    "electron-updater": "^4.2.2"
  },
  "build": {
    "appId": "com.qortal.QortalUi",
    "productName": "Qortal UI",
    "copyright": "Copyright Â© 2020",
    "compression": "normal",
    "asar": true,
    "publish": {
      "provider": "github"
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "legalTrademarks": "QORTAL.ORG",
      "target": [
        "portable",
        "zip",
        "nsis"
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "deleteAppDataOnUninstall": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "linux": {
      "category": "Utility",
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "directories": {
      "output": "release-builds"
    }
  }
}